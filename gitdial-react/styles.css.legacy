/* Verification Status */
.verification-container {
    max-width: 600px;
    margin: 40px auto;
    background: white;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 1px solid var(--border-gray);
}

.status-header {
    padding: 32px;
    background: #f8fafc;
    border-bottom: 1px solid var(--border-gray);
