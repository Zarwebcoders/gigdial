}

.status-pending {
    background: #FEF3C7;
    color: #D97706;
}

.status-rejected {
    background: #FEE2E2;
    color: #991B1B;
}

.btn-upload {
    padding: 6px 12px;
    font-size: 12px;
    border: 1px solid var(--border-gray);
    background: white;
    border-radius: 6px;
    cursor: pointer;
    margin-left: 12px;
    font-weight: 600;
}

.btn-upload:hover {
    background: #f8fafc;
}

