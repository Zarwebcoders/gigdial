/* Design Tokens - 8px Grid System */
:root {
    /* Core Colors */
    --primary-blue: #003366;
    --primary-green: #66CC33;
    --accent-purple: #6A1B9A;
    --text-dark: #1a1a1a;
    --text-gray: #666666;
    --border-gray: #e0e0e0;
    --bg-light: #f8f9fa;
    --white: #ffffff;

    /* Aliases for compatibility */
    --gigdial-blue: var(--primary-blue);
    --gigdial-green: var(--primary-green);
    --action-purple: var(--accent-purple);
    --dark-text: var(--text-dark);

    /* Status Colors */
    --warning-red: #D32F2F;
    --status-orange: #F57C00;
    --voice-accent: #2196F3;
    --sustainability-green: #00796B;

    /* Spacing - 8px grid */
    --space-1: 8px;
    --space-2: 16px;
    --space-3: 24px;
    --space-4: 32px;
    --space-5: 40px;
    --space-6: 48px;
    --space-8: 64px;
    --space-10: 80px;

    /* Border Radius - Modern */
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;

    /* Shadows - Premium */
    --shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-lg: 0 8px 24px rgba(0, 0, 0, 0.12);
    --shadow-hover: 0 12px 32px rgba(0, 0, 0, 0.15);

    /* Container */
    --container-max: 1200px;
    --container-padding: var(--space-3);
    --sidebar-width: 280px;

    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
}

/* Reset & Base */
*,
*::before,
*::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-family);
    color: var(--text-dark);
    line-height: 1.6;
    background: var(--bg-light);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

button,
input,
select,
textarea {
    font-family: inherit;
}

/* Container System */
.container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
}

/* Typography Utilities */
h1,
h2,
h3,
h4,
h5,
h6 {
    line-height: 1.2;
    font-weight: 700;
}

a {
    text-decoration: none;
    color: inherit;
}

/* =========================================
   Components: Top Bar & Header
   ========================================= */

/* =========================================
   Tables & Status
   ========================================= */
.table-container {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-gray);
    overflow: hidden;
    margin-bottom: var(--space-4);
}

table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
}

thead {
    background: var(--bg-light);
    border-bottom: 2px solid var(--border-gray);
}

th {
    padding: 16px;
    text-align: left;
    font-weight: 600;
    color: var(--text-gray);
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.5px;
}

td {
    padding: 16px;
    border-bottom: 1px solid var(--border-gray);
    vertical-align: middle;
}

tr:last-child td {
    border-bottom: none;
}

tr:hover {
    background: rgba(0, 51, 102, 0.02);
}

/* User Cell */
.user-cell {
    display: flex;
    align-items: center;
    gap: 12px;
}

.user-avatar {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #e0e0e0;
    color: #666;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    font-weight: 600;
}

/* Status Badges */
.status-badge {
    display: inline-flex;
    align-items: center;
    padding: 4px 10px;
    border-radius: var(--radius-full);
    font-size: 12px;
    font-weight: 600;
    line-height: 1;
}

.status-active {
    background: rgba(102, 204, 51, 0.1);
    color: var(--primary-green);
}

.status-pending {
    background: rgba(245, 124, 0, 0.1);
    color: var(--status-orange);
}

.status-suspended,
.status-rejected {
    background: rgba(211, 47, 47, 0.1);
    color: var(--warning-red);
}

/* Action Buttons in Table */
.action-btn {
    background: transparent;
    border: none;
    color: var(--text-gray);
    padding: 6px;
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s;
}

.action-btn:hover {
    background: #f0f0f0;
    color: var(--primary-blue);
}

/* Top Bar */
.top-bar {
    background: var(--primary-blue);
    color: var(--white);
    padding: var(--space-1) 0;
    font-size: 13px;
}

.top-bar-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    /* Fill the .container */
}

/* ... */
.header-content {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-2) 0;
    width: 100%;
    /* Fill the .container */
}

.logo img {
    height: 40px;
    width: auto;
}

.footer-section img {
    height: 32px;
    width: auto;
    margin-bottom: 16px;
    opacity: 0.9;
}

/* Search Wrapper */
.search-wrapper {
    flex: 1;
    max-width: 700px;
    display: flex;
    gap: var(--space-2);
    align-items: center;
}

.location-select {
    position: relative;
    min-width: 160px;
    flex-shrink: 0;
}

.location-select i {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--primary-blue);
    pointer-events: none;
    width: 20px;
    height: 20px;
}

.location-select select,
.search-input {
    width: 100%;
    height: 42px;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-md);
    font-size: 14px;
    background: var(--white);
    transition: all 0.2s ease;
}

.location-select select {
    padding: 0 16px 0 48px;
    appearance: none;
    cursor: pointer;
}

.search-box {
    flex: 1;
    position: relative;
}

.search-input {
    padding: 0 110px 0 12px;
}

.location-select select:focus,
.search-input:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 51, 102, 0.1);
}

.search-actions {
    position: absolute;
    right: 4px;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 4px;
    align-items: center;
}

/* Shared Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    gap: 8px;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.btn-sm {
    padding: 6px 12px;
    font-size: 13px;
}

/* Button Variants */
.btn-primary,
.search-btn {
    background: var(--primary-green);
    color: var(--white);
}

.btn-primary:hover,
.search-btn:hover {
    background: #5ab82a;
}

.btn-accent {
    background: var(--accent-purple);
    color: var(--white);
}

.btn-accent:hover {
    background: #5a1579;
}

.btn-secondary,
.btn-outline {
    background: var(--white);
    color: var(--text-dark);
    border: 1px solid var(--border-gray);
}

.btn-secondary:hover,
.btn-outline:hover {
    border-color: var(--primary-blue);
    color: var(--primary-blue);
}

.btn-ghost {
    background: transparent;
    color: var(--text-gray);
}

.btn-ghost:hover {
    background: rgba(0, 0, 0, 0.05);
    color: var(--text-dark);
}

.btn-danger {
    background: var(--warning-red);
    color: var(--white);
}

.btn-success {
    background: var(--primary-green);
    color: var(--white);
}

/* Voice Button */
.voice-btn {
    background: #f0f0f0;
    color: var(--primary-blue);
    width: 34px;
    height: 34px;
    border-radius: var(--radius-md);
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.voice-btn:hover {
    background: #e0e0e0;
}

/* Navigation */
.nav-actions {
    display: flex;
    gap: var(--space-2);
    align-items: center;
}

.nav-btn {
    height: 42px;
    padding: 0 18px;
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 13px;
    text-decoration: none;
    border: 1px solid var(--border-gray);
    background: var(--white);
    display: inline-flex;
    align-items: center;
    transition: all 0.2s ease;
}

.nav-btn:hover {
    border-color: var(--primary-blue);
    color: var(--primary-blue);
}

.nav-btn.btn-primary {
    background: var(--accent-purple);
    color: var(--white);
    border: none;
}


/* Content Moderation Styles */
.mod-card {
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-4);
}

.content-type-badge {
    display: inline-block;
    padding: 2px 8px;
    border-radius: var(--radius-sm);
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 8px;
}

.type-review {
    background: #e0f2fe;
    color: #0284c7;
}

.type-message {
    background: #fef3c7;
    color: #d97706;
}

.flag-reason {
    color: var(--warning-red);
    font-weight: 600;
    font-size: 14px;
    margin-bottom: 4px;
}

.mod-actions {
    display: flex;
    gap: 8px;
}

.btn-delete {
    background: var(--warning-red);
    color: var(--white);
    border: none;
    padding: 8px 16px;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: 13px;
    font-weight: 600;
}

.btn-ignore {
    background: var(--white);
    border: 1px solid var(--border-gray);
    color: var(--text-gray);
    padding: 8px 16px;
    border-radius: var(--radius-md);
    cursor: pointer;
    font-size: 13px;
    font-weight: 600;
}

