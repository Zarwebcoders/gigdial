    max-width: 500px;
    margin: 40px auto;
    text-align: center;
    padding: 32px;
    background: white;
    border-radius: var(--radius-xl);
    border: 1px solid var(--border-gray);
    box-shadow: var(--shadow-lg);
}

.shield-icon {
    width: 80px;
    height: 80px;
    background: rgba(33, 150, 243, 0.1);
    color: var(--primary-blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
}

.trust-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: #DCFCE7;
    color: #166534;
