    border-color: var(--primary-green);
    background: var(--primary-green);
    color: white;
}

.step-label {
    font-size: 12px;
    font-weight: 600;
    color: #64748b;
}

.tracker-step.active .step-label {
    color: var(--primary-blue);
}

.doc-list {
