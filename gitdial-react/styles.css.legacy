/* =========================================
   Dashboard Layout
   ========================================= */
.dashboard-container {
    display: flex;
    min-height: 100vh;
}

/* Sidebar */
.dashboard-sidebar {
    width: var(--sidebar-width);
    background: var(--white);
    border-right: 1px solid var(--border-gray);
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
}

.sidebar-header {
    height: 70px;
    display: flex;
    align-items: center;
    padding: 0 var(--space-3);
    border-bottom: 1px solid var(--border-gray);
}

.sidebar-nav {
    flex: 1;
    padding: var(--space-3) var(--space-2);
    overflow-y: auto;
}

.sidebar-link {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    margin-bottom: 4px;
    color: var(--text-gray);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
    font-weight: 500;
}

.sidebar-link:hover,
.sidebar-link.active {
    background: rgba(0, 51, 102, 0.05);
    color: var(--primary-blue);
}

.sidebar-link.active {
    font-weight: 600;
    background: rgba(0, 51, 102, 0.1);
}

.sidebar-link i {
    width: 20px;
    height: 20px;
}

.sidebar-footer {
    padding: var(--space-3);
    border-top: 1px solid var(--border-gray);
}

.sidebar-user {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
}

.sidebar-user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--primary-blue);
    color: white;
}

.sidebar-user-info {
    font-size: 14px;
}

.sidebar-user-name {
    font-weight: 600;
    color: var(--text-dark);
}

.sidebar-user-email {
    font-size: 12px;
    color: var(--text-gray);
}

/* Dashboard Main */
.dashboard-main {
    flex: 1;
    margin-left: var(--sidebar-width);
    padding: var(--space-4);
    background: var(--bg-light);
    min-height: 100vh;
}

.dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
}

.dashboard-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--text-dark);
}

/* Verified Badge */
.verified-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 4px 12px;
    background: rgba(0, 51, 102, 0.1);
    color: var(--primary-blue);
    border-radius: var(--radius-full);
    font-size: 13px;
    font-weight: 600;
    margin-top: 8px;
}


/* Dashboard Section */
.dashboard-section {
    background: var(--white);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    margin-bottom: var(--space-4);
    border: 1px solid var(--border-gray);
}

.dashboard-section .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
    text-align: left;
}

.dashboard-section .section-title {
    font-size: 20px;
    font-weight: 700;
}

/* =========================================
   Components: Cards & Sections
   ========================================= */

/* Hero */
.hero {
    position: relative;
    min-height: 500px;
    display: flex;
    align-items: center;
    color: var(--white);
    background: linear-gradient(135deg, var(--primary-blue) 0%, #004080 100%);
    padding: var(--space-8) 0;
}

.hero-content {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    width: 100%;
    z-index: 2;
    position: relative;
}

.hero-title {
    font-size: 48px;
    font-weight: 900;
    margin-bottom: var(--space-3);
    line-height: 1.2;
}

.hero-subtitle {
    font-size: 20px;
    opacity: 0.9;
    margin-bottom: var(--space-4);
    max-width: 600px;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-6);
}

.stat-card {
    background: var(--white);
    padding: var(--space-3);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    text-align: center;
    transition: transform 0.2s ease;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.stat-value {
    font-size: 32px;
    font-weight: 800;
    color: var(--primary-blue);
    margin-bottom: 4px;
}

.stat-label {
    font-size: 14px;
    color: var(--text-gray);
}

.stat-change {
    font-size: 12px;
    color: var(--primary-green);
    margin-top: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
}

/* Lead Card (Dashboard) */
.lead-card {
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-3);
    box-shadow: var(--shadow-sm);
    transition: all 0.2s ease;
}

.lead-card:hover {
    box-shadow: var(--shadow-md);
    border-color: var(--primary-blue);
}

.lead-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
}

.lead-info h3 {
    font-size: 18px;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
}

.lead-meta {
    font-size: 14px;
    color: var(--text-gray);
}

.lead-actions {
    display: flex;
    gap: 12px;
    margin-top: 16px;
    flex-wrap: wrap;
}

/* Badge System */
.badge {
    padding: 6px 12px;
    border-radius: var(--radius-full);
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
}

.badge-new {
    background: rgba(33, 150, 243, 0.1);
    color: var(--voice-accent);
}

.badge-urgent {
    background: rgba(211, 47, 47, 0.1);
    color: var(--warning-red);
}

.badge-warning {
    background: #FEF3C7;
    color: #D97706;
}

/* Wellness Cards */
.wellness-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--space-3);
}

.wellness-card {
    background: var(--white);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    text-align: center;
    border: 1px solid var(--border-gray);
}

.wellness-icon {
    font-size: 40px;
    margin-bottom: 12px;
    color: var(--sustainability-green);
}

.wellness-title {
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.wellness-desc {
    font-size: 14px;
    color: var(--text-gray);
    margin-bottom: 16px;
}

/* Voice Guide Component */
.voice-guide {
    background: linear-gradient(135deg, var(--voice-accent) 0%, var(--action-purple) 100%);
    color: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    margin-bottom: 32px;
    text-align: center;
    box-shadow: var(--shadow-md);
}

.voice-guide-btn {
    background: white;
    color: var(--voice-accent);
    border: none;
    padding: 16px 32px;
    border-radius: var(--radius-full);
    font-weight: 700;
    font-size: 18px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    margin-top: 16px;
    transition: all 0.3s ease;
}

.voice-guide-btn:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-lg);
}

.voice-guide-btn.active {
    background: var(--warning-red);
    color: white;
    animation: voice-pulse 1.5s infinite;
}

@keyframes voice-pulse {

    0%,
    100% {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }
}

/* =========================================
   Inputs & Forms
   ========================================= */
.form-container {
    background: var(--white);
    border-radius: var(--radius-xl);
    padding: var(--space-5);
    box-shadow: var(--shadow-md);
    max-width: 800px;
    margin: 0 auto;
}

.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text-dark);
}

input[type="text"],
input[type="email"],
input[type="tel"],
input[type="password"],
textarea,
select {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-md);
    font-size: 15px;
    transition: all 0.2s ease;
}

input:focus,
textarea:focus,
select:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 51, 102, 0.1);
}

/* File Upload */
.file-upload {
    border: 2px dashed var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 32px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.file-upload:hover {
    border-color: var(--primary-blue);
    background: rgba(0, 51, 102, 0.02);
}

/* Form Steps */
.steps {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40px;
    position: relative;
}

.steps::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--border-gray);
    z-index: 0;
}

.step {
    position: relative;
    z-index: 1;
    text-align: center;
}

.step-circle {
    width: 40px;
    height: 40px;
    background: var(--border-gray);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-gray);
    margin: 0 auto 8px;
    font-weight: 700;
    transition: all 0.3s ease;
}

.step.active .step-circle {
    background: var(--accent-purple);
    color: white;
}

.step.completed .step-circle {
    background: var(--primary-green);
    color: white;
}

/* =========================================
   Footer
   ========================================= */
.footer {
    background: #1a1a1a;
    color: #cccccc;
    padding: var(--space-8) 0 var(--space-4);
}

.footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(4, 1fr);
    gap: var(--space-6);
    margin-bottom: var(--space-6);
    max-width: var(--container-max);
    margin-left: auto;
    margin-right: auto;
    padding: 0 var(--container-padding);
}

.footer-section h3 {
    color: var(--white);
    font-size: 16px;
    margin-bottom: 16px;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li a {
    color: #cccccc;
    transition: color 0.2s ease;
}

.footer-section ul li a:hover {
    color: var(--primary-green);
}

.footer-bottom {
    border-top: 1px solid #333;
    padding-top: 24px;
    text-align: center;
    font-size: 14px;
    color: #999;
}

/* =========================================
   Responsive
   ========================================= */
@media (max-width: 1024px) {
    .dashboard-sidebar {
        transform: translateX(-100%);
        box-shadow: var(--shadow-lg);
    }

    .dashboard-sidebar.active {
        transform: translateX(0);
    }

    .dashboard-main {
        margin-left: 0;
    }

    .mobile-menu-toggle {
        display: block !important;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        padding: 8px;
    }

    .footer-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 768px) {
    .header-content {
        flex-wrap: wrap;
    }

    .search-wrapper {
        order: 3;
        width: 100%;
        margin-top: 16px;
    }

    .hero-title {
        font-size: 32px;
    }

    .footer-grid {
        grid-template-columns: 1fr;
    }

    .step-label {
        display: none;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }
}

/* Page Header (Registration) */
.page-header {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--accent-purple) 100%);
    color: white;
    padding: 48px 24px 80px;
    /* Extra bottom padding for overlap */
    text-align: center;
}

.page-header h1 {
    font-size: 42px;
    margin-bottom: 16px;
}

.page-header p {
    font-size: 18px;
    opacity: 0.9;
}

.form-container.offset-top {
    margin-top: -60px;
    position: relative;
    z-index: 10;
}

/* =========================================
   Worker & Profile Specific Styles
   ========================================= */

/* Public Profile */
.public-profile-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-6);
    padding-top: var(--space-4);
    padding-bottom: 100px;
}

@media (max-width: 768px) {
    .public-profile-grid {
        grid-template-columns: 1fr;
    }
}

.profile-hero {
    display: flex;
    gap: var(--space-4);
    align-items: center;
    margin-bottom: var(--space-4);
}

.profile-hero-avatar {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--white);
    box-shadow: var(--shadow-sm);
}

.profile-hero-info h1 {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 4px;
}

.profile-hero-meta {
    color: var(--text-gray);
    display: flex;
    align-items: center;
    gap: 8px;
}

.portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: var(--space-2);
    margin-top: var(--space-3);
}


/* Refund Policy Specifics */
.scenario-table {
    width: 100%;
    margin-top: 24px;
    border-collapse: collapse;
}

.scenario-table th,
.scenario-table td {
    padding: 16px;
    border-bottom: 1px solid var(--border-gray);
    text-align: left;
}

.scenario-table th {
    background: #f8fafc;
    font-weight: 700;
    color: var(--text-dark);
}

.process-step {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
}

.process-step:last-child {
    margin-bottom: 0;
}

.step-num {
    width: 32px;
    height: 32px;
    background: var(--primary-blue);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    flex-shrink: 0;
}

.portfolio-item img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: transform 0.2s;
}


/* Blog Styles */
.story-section {
    max-width: 800px;
    margin: 40px auto;
}

.story-section h2 {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 24px;
    color: var(--text-dark);
}

.story-section p {
    font-size: 16px;
    line-height: 1.8;
    margin-bottom: 24px;
    color: var(--text-gray);
}

.motto {
    background: #f0f9ff;
    padding: 32px;
    border-radius: var(--radius-lg);
    text-align: center;
    margin: 40px 0;
    border: 1px solid var(--primary-blue);
}

.motto h2 {
    color: var(--primary-blue);
    margin-bottom: 8px;
}

.benefits h2 {
    text-align: center;
    font-size: 36px;
    font-weight: 800;
    margin-bottom: 40px;
    color: var(--text-dark);
}

.benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
    margin-bottom: 60px;
}

.benefit-card {
    background: white;
    padding: 32px;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-gray);
    transition: all 0.2s;
}

.benefit-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
}

.benefit-card h3 {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--text-dark);
}

.blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
    margin-bottom: 60px;
}

.blog-card {
    background: white;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-gray);
    transition: all 0.2s;
}

.blog-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-5px);
}

.blog-image {
    height: 200px;
    background: #e2e8f0;
    background-size: cover;
    background-position: center;
}

.blog-content {
    padding: 24px;
}

.blog-category {
    text-transform: uppercase;
    font-size: 12px;
    font-weight: 700;
    color: var(--primary-blue);
    letter-spacing: 1px;
    margin-bottom: 8px;
}

.blog-title {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 12px;
    color: var(--text-dark);
    line-height: 1.4;
}

.blog-excerpt {
    font-size: 14px;
    color: var(--text-gray);
    margin-bottom: 16px;
    line-height: 1.6;
}

.blog-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--border-gray);
    padding-top: 16px;
}

.blog-author {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    color: var(--text-gray);
    font-weight: 500;
}

.audio-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    font-weight: 600;
    color: var(--primary-blue);
    background: #eff6ff;
    padding: 6px 12px;
    border-radius: 20px;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
}

.audio-btn:hover {
    background: #dbeafe;
}


/* Sustainability Styles */
.hero-eco {
    background: linear-gradient(135deg, #96C934 0%, #003F89 100%);
    color: white;
    text-align: center;
    padding: 80px 20px;
}

.impact-card {
    background: linear-gradient(135deg, #C6E190 0%, #96C934 100%);
    padding: 40px;
    border-radius: 24px;
    margin-bottom: 60px;
    text-align: center;
    color: #003F89;
}

.impact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 24px;
    max-width: 800px;
    margin: 32px auto 0;
}

.impact-stat {
    background: white;
    padding: 24px;
    border-radius: 16px;
}

.impact-value {
    font-size: 40px;
    font-weight: 800;
    color: #96C934;
    margin-bottom: 4px;
}

.impact-label {
    font-size: 16px;
    color: #221F1F;
    font-weight: 600;
}

.worker-card-eco {
    background: white;
    border: 2px solid #96C934;
    border-radius: 16px;
    padding: 24px;
    transition: all 0.3s;
}

.worker-card-eco:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.eco-badge-box {
    background: #ecfccb;
    padding: 12px;
    border-radius: 12px;
    margin-bottom: 16px;
}

.eco-badge-title {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #166534;
    font-weight: 700;
    margin-bottom: 8px;
}

.eco-list li {
    font-size: 14px;
    color: #4b5563;
    margin-bottom: 4px;
    list-style-type: disc;
    margin-left: 20px;
}


/* Sticky CTA Side Panel */
.sticky-cta {
    position: sticky;
    top: 100px;
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    box-shadow: var(--shadow-lg);
    height: fit-content;
}

.calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    margin-bottom: var(--space-3);
    text-align: center;
}

.calendar-day {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 12px;
    font-weight: 600;
}

.calendar-day.booked {
    background: #f3f4f6;
    color: #9ca3af;
    text-decoration: line-through;
}

.calendar-day.available {
    background: rgba(102, 204, 51, 0.1);
    color: var(--primary-green);
    border: 1px solid var(--primary-green);
}

/* Reviews */
.review-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
}

.review-card,
.review-item {
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-md);
    padding: var(--space-3);
    transition: box-shadow 0.2s;
}

.review-item:hover {
    box-shadow: var(--shadow-sm);
}

.review-header,
.review-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.review-user {
    font-weight: 600;
    color: var(--text-dark);
}

.review-date {
    font-size: 12px;
    color: var(--text-gray);
}

.review-actions {
    margin-top: 12px;
    display: flex;
    gap: 12px;
}

/* Rating Overview */
.rating-overview {
    background: var(--white);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    text-align: center;
    box-shadow: var(--shadow-sm);
}

.big-rating {
    font-size: 48px;
    font-weight: 800;
    color: var(--text-dark);
    line-height: 1;
}

.rating-bar {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: var(--text-gray);
    margin-bottom: 4px;
}

.bar-bg {
    flex: 1;
    height: 6px;
    background: #f0f0f0;
    border-radius: 4px;
    overflow: hidden;
}

.bar-fill {
    height: 100%;
    background: #FFD700;
    border-radius: 4px;
}

/* Payout & Earnings */
.payout-container {
    max-width: 800px;
    margin: 0 auto;
}

.balance-card {
    background: linear-gradient(135deg, var(--primary-blue), #004080);
    color: white;
    padding: var(--space-5);
    border-radius: var(--radius-xl);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-5);
    box-shadow: var(--shadow-md);
}

.balance-label {
    font-size: 14px;
    opacity: 0.9;
    margin-bottom: 4px;
}

.balance-amount {
    font-size: 36px;
    font-weight: 700;
}

.btn-withdraw {
    background: var(--primary-green);
    color: white;
    padding: 12px 24px;
    border: none;
    border-radius: var(--radius-full);
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s;
}

.btn-withdraw:hover {
    transform: translateY(-2px);
    background: #5ab82a;
}

.history-table {
    background: var(--white);
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    overflow: hidden;
}

.table-header {
    padding: var(--space-3);
    border-bottom: 1px solid var(--border-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f8fafc;
}

.filter-group {
    display: flex;
    background: #e2e8f0;
    border-radius: var(--radius-md);
    padding: 2px;
}

.filter-chip {
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    cursor: pointer;
    color: #64748b;
}

.filter-chip.active {
    background: white;
    color: var(--text-dark);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* Service Card Enhancements */
.service-card {
    position: relative;
    background: var(--white);
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all 0.2s ease;
}

.service-card:hover {
    border-color: var(--primary-blue);
    box-shadow: var(--shadow-md);
}

.service-card.inactive {
    opacity: 0.7;
    background: #f9fafb;
}

.service-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-2);
}

.service-icon {
    width: 48px;
    height: 48px;
    background: rgba(0, 51, 102, 0.05);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-blue);
    margin-bottom: 12px;
}

.service-title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 4px;
}

.service-category {
    font-size: 12px;
    color: var(--text-gray);
    display: flex;
    align-items: center;
    gap: 4px;
}

.service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin: 12px 0;
}

.service-tag {
    background: #f3f4f6;
    color: #4b5563;
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 500;
}

.service-actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 8px;
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid var(--border-gray);
}

.toggle-switch-wrapper {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-left: auto;
}

.toggle-switch {
    width: 44px;
    height: 24px;
    position: relative;
    display: inline-block;
}

.toggle-switch input {
    opacity: 0;
    width: 0;
    height: 0;
}

.toggle-slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: .4s;
    border-radius: 24px;
}

.toggle-slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    transition: .4s;
    border-radius: 50%;
}

input:checked+.toggle-slider {
    background-color: var(--primary-green);
}

input:checked+.toggle-slider:before {
    transform: translateX(20px);
}

/* =========================================
   Settings & Wellness Dashboard Styles
   ========================================= */

/* Settings Layout */
.settings-container {
    max-width: 1000px;
    margin: 0 auto;
}

.settings-header {
    margin-bottom: var(--space-4);
}

.settings-section {
    background: var(--white);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-4);
    border: 1px solid var(--border-gray);
    box-shadow: var(--shadow-sm);
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-4);
}

.section-title-wrapper {
    display: flex;
    align-items: center;
    gap: 16px;
}

.section-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20px;
}

.section-title {
    font-size: 18px;
    font-weight: 700;
    margin: 0;
    color: var(--text-dark);
}

/* Notification Table */
.notification-table {
    width: 100%;
    border-collapse: collapse;
}

.notification-table th {
    text-align: left;
    padding: 12px;
    border-bottom: 1px solid var(--border-gray);
    color: var(--text-gray);
    font-weight: 600;
    font-size: 13px;
    text-transform: uppercase;
}

.notification-table td {
    padding: 16px 12px;
    border-bottom: 1px solid #f1f5f9;
    vertical-align: middle;
}

.notification-name {
    font-weight: 600;
    color: var(--text-dark);
}

.notification-desc {
    font-size: 13px;
    color: var(--text-gray);
}

/* Subscriptions */
.subscription-comparison {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
}

.subscription-card {
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 32px;
    text-align: center;
    background: #f8fafc;
    transition: all 0.3s ease;
}

.subscription-card.premium {
    border: 2px solid #96C934;
    background: white;
    position: relative;
    overflow: hidden;
    box-shadow: var(--shadow-md);
}

.subscription-badge {
    position: absolute;
    top: 20px;
    right: -32px;
    background: #96C934;
    color: white;
    padding: 6px 40px;
    transform: rotate(45deg);
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
}

.subscription-price {
    font-size: 42px;
    font-weight: 800;
    margin: 16px 0;
    color: var(--text-dark);
}

.subscription-price span {
    font-size: 16px;
    color: var(--text-gray);
    font-weight: 500;
}

.subscription-features {
    list-style: none;
    padding: 0;
    margin: 24px 0;
    text-align: left;
}

.subscription-features li {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 14px;
}

.feature-icon {
    width: 18px;
    height: 18px;
    color: var(--primary-green);
}

.feature-icon.disabled {
    color: var(--text-gray);
    opacity: 0.5;
}

/* Health & Wellness */
.wellness-hero {
    background: linear-gradient(135deg, #16A34A 0%, #15803D 100%);
    color: white;
    padding: 32px;
    border-radius: var(--radius-xl);
    margin-bottom: 32px;
    box-shadow: var(--shadow-lg);
}

.wellness-hero h1 {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 8px;
}

.wellness-hero p {
    font-size: 16px;
    opacity: 0.9;
    max-width: 600px;
}

.wellness-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
    margin-bottom: 32px;
}

.wellness-stat-card {
    background: white;
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    box-shadow: var(--shadow-sm);
}

.stat-header {
    display: flex;
    align-items: center;
    gap: 16px;
}

.stat-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f1f5f9;
}

.stat-icon.health {
    background: rgba(220, 38, 38, 0.1);
    color: #DC2626;
}

.stat-icon.training {
    background: rgba(37, 99, 235, 0.1);
    color: #2563EB;
}

.stat-icon.financial {
    background: rgba(22, 163, 74, 0.1);
    color: #16A34A;
}

.stat-icon.support {
    background: rgba(147, 51, 234, 0.1);
    color: #9333EA;
}

.course-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-top: 20px;
}

.course-card {
    background: white;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
}

.course-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
}

.course-thumbnail {
    height: 140px;
    background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.course-content {
    padding: 20px;
}

.course-badge {
    font-size: 11px;
    font-weight: 700;
    background: rgba(37, 99, 235, 0.1);
    color: #2563EB;
    padding: 4px 8px;
    border-radius: 4px;
    display: inline-block;
    margin-bottom: 8px;
}

.course-title {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.course-description {
    font-size: 13px;
    color: var(--text-gray);
    margin-bottom: 16px;
    line-height: 1.5;
}

.course-meta {
