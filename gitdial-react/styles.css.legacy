}

.signature-details {
    font-size: 13px;
    color: var(--text-gray);
    margin-bottom: 24px;
    padding: 16px;
    background: #f8fafc;
    border-radius: 8px;
    border: 1px solid var(--border-gray);
}

/* =========================================
   Worker Earnings Styles
   ========================================= */
.chart-container {
    background: #F2F8E6;
    padding: 40px;
    border-radius: var(--radius-lg);
    margin-bottom: 24px;
    text-align: center;
}

.chart-title {
    color: var(--text-dark);
    margin-bottom: 16px;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.simple-bar-chart {
    height: 200px;
    background: white;
    border-radius: 8px;
    display: flex;
    align-items: flex-end;
    justify-content: space-around;
    padding: 20px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.chart-bar {
    width: 40px;
    background: linear-gradient(180deg, #96C934 0%, #003F89 100%);
    border-radius: 4px 4px 0 0;
    transition: height 0.3s ease;
}

.bank-account-card {
    background: #f8fafc;
    padding: 20px;
    border-radius: var(--radius-lg);
    margin-bottom: 16px;
    border: 1px solid var(--border-gray);
}

.withdrawal-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.withdrawal-item {
    background: white;
    padding: 16px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.claim-card {
    background: white;
    padding: 20px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    margin-bottom: 16px;
}

.withdraw-card {
    border: 2px solid var(--primary-green);
    background: white;
    border-radius: var(--radius-lg);
    padding: 24px;
    margin: 24px 0;
}

/* =========================================
   Profile Edit Utils
   ========================================= */
.info-box {
    background: rgba(150, 201, 52, 0.1);
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 16px;
}

.info-box-text {
    margin: 0;
    font-size: 14px;
    color: var(--text-gray);
    display: flex;
    align-items: start;
    gap: 8px;
}

.eco-gradient {
    background: linear-gradient(135deg, #96C934 0%, #7AB02C 100%);
}

.portfolio-upload-content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.btn-add-photo {
    width: 32px;
    height: 32px;
    color: #96C934;
}


/* Policy & Legal Pages */
.legal-header {
    margin-bottom: 40px;
    border-bottom: 1px solid var(--border-gray);
    padding-bottom: 24px;
}

.legal-header h1 {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.toc {
    background: #f8fafc;
    padding: 24px;
    border-radius: var(--radius-lg);
    margin-bottom: 40px;
    border: 1px solid var(--border-gray);
}

.toc-title {
    font-weight: 700;
    margin-bottom: 16px;
    font-size: 16px;
}

.toc a {
    display: block;
    margin-bottom: 8px;
    color: var(--primary-blue);
    text-decoration: none;
    font-size: 14px;
}

.toc a:hover {
    text-decoration: underline;
}

.legal-content h2 {
    font-size: 24px;
    font-weight: 700;
    margin-top: 40px;
