    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
    font-size: 20px;
}

.quick-link-title {
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.quick-link-desc {
    font-size: 13px;
    color: var(--text-gray);
}

.policy-section {
    padding: 40px 0;
    border-bottom: 1px solid var(--border-gray);
}

.policy-section:last-child {
    border-bottom: none;
}

.policy-section h2 {
    display: flex;
    align-items: center;
