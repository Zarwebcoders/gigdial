.quick-links {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 24px;
    margin-bottom: 60px;
}

.quick-link-card {
    background: white;
    border: 1px solid var(--border-gray);
    padding: 24px;
    border-radius: var(--radius-lg);
