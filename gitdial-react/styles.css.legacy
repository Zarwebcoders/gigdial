.hero-cta .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.2);
}

/* 4. Glassmorphic Stats Cards */
.hero .stat-card {
    background: rgba(255, 255, 255, 0.1); /* Translucent */
    backdrop-filter: blur(12px); /* Blur effect */
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2); /* Subtle border */
    color: white;
    padding: 24px;
    text-align: left; /* Align text left for cleaner look */
}

.hero .stat-value {
    color: white; /* Force white text */
    font-size: 40px;
    margin-bottom: 0;
}
.hero .stat-label {
    color: rgba(255, 255, 255, 0.7);
    font-size: 13px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* Remove default white card styles inside hero */
.hero .stats-grid {
    grid-template-columns: repeat(4, 1fr) !important;
    max-width: 100% !important; 
    gap: 24px !important;
}

/* Mobile Responsiveness for Premium Features */
@media (max-width: 768px) {
    .hero-title { font-size: 40px; }
    .hero .stats-grid { grid-template-columns: repeat(2, 1fr) !important; }
}

