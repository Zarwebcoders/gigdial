}

.highlight-box h4 {
    color: #15803d;
    font-weight: 700;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.highlight-box p {
    color: #166534;
    margin-bottom: 0;
}

.warning-box {
    background: #fffbeb;
    border: 1px solid #fde68a;
    border-radius: var(--radius-md);
    padding: 24px;
    margin: 24px 0;
}

.warning-box h4 {
    color: #b45309;
    font-weight: 700;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 8px;
