    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.star-rating-lg i:hover,
.star-rating-lg i.active {
    color: #FFD700;
    fill: #FFD700;
    transform: scale(1.1);
}

/* Cost Input */
.cost-input-wrapper {
    position: relative;
    background: var(--bg-light);
    border-radius: 16px;
    border: 1px solid var(--border-gray);
    transition: all 0.2s;
}

.cost-input-wrapper:focus-within {
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
    background: var(--white);
}

.cost-input-symbol {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    font-weight: 700;
    color: var(--text-gray);
    font-size: 20px;
}

.cost-input {
    width: 100%;
    padding: 16px 16px 16px 45px;
    border: none;
    background: transparent;
    font-size: 24px;
    font-weight: 700;
    color: var(--text-dark);
    outline: none;
}

/* Aspect Ratings */
.aspect-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #f1f5f9;
}

.aspect-stars {
    display: flex;
    gap: 4px;
}

.aspect-stars i {
    width: 16px;
    height: 16px;
    color: #e2e8f0;
    cursor: pointer;
}

.aspect-stars i.active {
    color: #FFD700;
    fill: #FFD700;
}

/* Upload Zone */
.upload-zone {
    border: 2px dashed #cbd5e1;
    border-radius: 12px;
    padding: 24px;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
    background: #f8fafc;
}

.upload-zone:hover {
    border-color: var(--primary-blue);
    background: #f0f7ff;
}

.form-input {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-md);
    font-size: 15px;
    transition: all 0.2s ease;
    background: var(--white);
}

.form-input:focus {
    outline: none;
