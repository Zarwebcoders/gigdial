    font-size: 13px;
    font-weight: 700;
    margin-bottom: 16px;
}

.check-list {
    margin: 32px 0;
    border: 1px solid var(--border-gray);
    border-radius: 12px;
    overflow: hidden;
}

.check-item {
    display: flex;
    justify-content: space-between;
    padding: 16px;
    border-bottom: 1px solid var(--border-gray);
    background: #f8fafc;
}

.check-item:last-child {
    border-bottom: none;
}

.check-label {
    font-weight: 500;
    color: var(--text-dark);
}

.check-status {
    color: var(--primary-green);
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 600;
}

.verified-date {
    font-size: 13px;
    color: var(--text-gray);
    margin-top: 24px;
}

.secure-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-size: 12px;
    color: var(--text-gray);
    margin-top: 24px;
}

.divider {
    display: flex;
    align-items: center;
    text-align: center;
    color: var(--text-gray);
    font-size: 12px;
    margin: 24px 0;
}

.divider::before,
.divider::after {
    content: '';
