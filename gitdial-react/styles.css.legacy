   PREMIUM DESIGN UPGRADE (V2.0)
   ========================================= */

/* 1. Global Typography Polish */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Plus Jakarta Sans', sans-serif;
    letter-spacing: -0.025em; /* Tight, modern tracking */
}

/* 2. Enhanced Header (Glassmorphism) */
.header {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
}

.search-input {
    background: #f1f5f9; /* Slightly darker input bg */
    border: 1px solid transparent;
    font-weight: 500;
}
.search-input:focus {
    background: #ffffff;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1); /* Soft glow */
}

/* 3. Hero Section Overhaul */
.hero {
    /* Rich, deep gradient */
    background: radial-gradient(circle at 80% 20%, #2563eb, #1e40af, #0f172a);
    overflow: hidden; /* For floating shapes */
    position: relative;
    padding: var(--space-10) 0; /* More breathing room */
}

/* Animated Background Shapes (Pseudo-elements) */
.hero::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -20%;
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
    border-radius: 50%;
    animation: float 20s infinite ease-in-out;
    pointer-events: none;
}
.hero::after {
    content: '';
    position: absolute;
    bottom: -30%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, rgba(0,0,0,0) 70%);
    border-radius: 50%;
    animation: float 15s infinite ease-in-out reverse;
    pointer-events: none;
}

@keyframes float {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(30px, 50px); }
}

