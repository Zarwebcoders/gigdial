    background: white;
    padding: 0 10px;
}

.tracker-step .step-circle {
    width: 24px;
    height: 24px;
    background: white;
    border: 2px solid #cbd5e1;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: #64748b;
    margin: 0 auto 8px;
    font-weight: 700;
}

.tracker-step.active .step-circle {
    border-color: var(--primary-blue);
    background: var(--primary-blue);
    color: white;
}

