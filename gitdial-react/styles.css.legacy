.hero-title {
    font-size: 56px; /* Larger title */
    text-shadow: 0 2px 10px rgba(0,0,0,0.2);
    margin-bottom: 24px;
}
.hero-subtitle {
    font-size: 22px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 32px;
}

/* Hero Buttons */
.hero-cta .btn {
    padding: 14px 28px;
    font-size: 16px;
    border-radius: 30px; /* Pill buttons */
    transition: transform 0.2s, box-shadow 0.2s;
