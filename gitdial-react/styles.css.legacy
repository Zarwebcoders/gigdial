/* =========================================
   Subscription Cards
   ========================================= */
.active-sub-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
}

.active-sub-card {
    background: white;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 24px;
    position: relative;
    transition: all 0.2s;
}

.active-sub-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-md);
    border-color: var(--primary-blue);
}

.sub-status-badge {
    position: absolute;
    top: 24px;
    right: 24px;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
}

.sub-status-active {
    background: rgba(102, 204, 51, 0.1);
    color: var(--primary-green);
}

.sub-status-paused {
    background: #fff7ed;
    color: #ea580c;
}

.active-sub-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
}

.active-sub-icon.blue {
    background: #eff6ff;
    color: var(--primary-blue);
}

.active-sub-icon.orange {
    background: #fff7ed;
    color: #ea580c;
}

.active-sub-title {
    font-size: 18px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.active-sub-price {
    font-size: 24px;
    font-weight: 800;
    margin-bottom: 20px;
    color: var(--text-dark);
}

.active-sub-price span {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-gray);
}

.sub-details-list {
    margin-bottom: 24px;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.sub-detail-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: var(--text-gray);
}

.sub-card-actions {
    display: flex;
    gap: 12px;
    border-top: 1px solid var(--border-gray);
    padding-top: 20px;
}

.sub-card-actions .btn {
    flex: 1;
}

/* Text Colors */
.text-success {
    color: var(--primary-green) !important;
}

.border-success {
    border-color: var(--primary-green) !important;
}

.text-warning {
    color: var(--warning-red) !important;
}

.border-warning {
    border-color: var(--warning-red) !important;
}

/* =========================================
   Address Management
   ========================================= */
.addr-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.addr-card {
    background: white;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s;
}

.addr-card:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--primary-blue);
}

.addr-details {
    flex: 1;
}

.addr-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
}

.addr-type {
    font-size: 16px;
    font-weight: 700;
    color: var(--text-dark);
    display: flex;
    align-items: center;
    gap: 8px;
}

.addr-icon {
    width: 32px;
    height: 32px;
    background: #f1f5f9;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-gray);
}

.default-badge {
    background: rgba(102, 204, 51, 0.1);
    color: var(--primary-green);
    font-size: 11px;
    padding: 2px 8px;
    border-radius: 12px;
    font-weight: 700;
    text-transform: uppercase;
}

.addr-text {
    font-size: 14px;
    color: var(--text-gray);
    padding-left: 44px;
    /* Align with text start */
}

.addr-actions {
    display: flex;
    gap: 8px;
}

.add-new-addr-btn {
    background: white;
    border: 2px dashed var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-weight: 600;
    color: var(--primary-blue);
    cursor: pointer;
    width: 100%;
    transition: all 0.2s;
}

.add-new-addr-btn:hover {
    border-color: var(--primary-blue);
    background: #eff6ff;
}

/* Modals */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(4px);
}

.modal-overlay.active {
    display: flex;
}

.modal-container {
    background: white;
    border-radius: var(--radius-xl);
    width: 100%;
    max-width: 500px;
    padding: 32px;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.3s ease;
}

@keyframes slideUp {
    from {
        transform: translateY(20px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}

.modal-title {
    font-size: 20px;
    font-weight: 800;
    color: var(--text-dark);
}

/* =========================================
   Categories Grid & View More Card
   ========================================= */
.categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 20px;
    margin-top: 24px;
}

.category-card {
    position: relative;
    height: 200px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background-size: cover;
    background-position: center;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 20px;
}

.category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.2) 100%);
    z-index: 1;
}

.category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
}

.category-name,
.category-count {
    position: relative;
    z-index: 2;
    color: white;
}

.category-name {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 4px;
}

.category-count {
    font-size: 13px;
    opacity: 0.8;
}

/* View More Card */
.view-more-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.view-more-card::before {
    display: none;
}

.view-more-icon {
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
    transition: all 0.3s ease;
}

.view-more-card:hover .view-more-icon {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(1.1);
}

.view-more-card .category-name {
    font-size: 18px;
    font-weight: 800;
}

/* =========================================
   Posted Jobs Section
   ========================================= */
.section-posted-jobs {
    padding: var(--space-10) 0;
    background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
    position: relative;
}

.section-posted-jobs::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(0, 51, 102, 0.1) 50%, transparent 100%);
}

.section-posted-jobs .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-5);
    gap: var(--space-3);
}

.section-posted-jobs .section-header h2 {
    font-size: 36px;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: var(--space-1);
}

.section-posted-jobs .section-subtitle {
    font-size: 16px;
    color: var(--text-gray);
    max-width: 600px;
    margin: 0;
}

/* Jobs Filters */
.jobs-filters {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    margin-bottom: var(--space-5);
    flex-wrap: wrap;
    padding: var(--space-3);
    background: white;
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--border-gray);
}

.filter-group {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
    flex: 1;
}

.filter-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    background: white;
    border: 2px solid var(--border-gray);
    border-radius: var(--radius-full);
    color: var(--text-gray);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.filter-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(0, 51, 102, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.filter-btn:hover::before {
    width: 300px;
    height: 300px;
}

.filter-btn i {
    width: 18px;
    height: 18px;
    position: relative;
    z-index: 1;
}

.filter-btn span {
    position: relative;
    z-index: 1;
}

.filter-btn:hover {
    border-color: var(--primary-blue);
    color: var(--primary-blue);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 51, 102, 0.15);
}

.filter-btn.active {
    background: linear-gradient(135deg, var(--primary-blue) 0%, #004d99 100%);
    border-color: var(--primary-blue);
    color: white;
    box-shadow: 0 4px 16px rgba(0, 51, 102, 0.25);
}

.filter-btn.active::before {
    display: none;
}

.location-filter {
    padding: 10px 18px;
    border: 2px solid var(--border-gray);
    border-radius: var(--radius-full);
    background: white;
    color: var(--text-gray);
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 180px;
}

.location-filter:hover,
.location-filter:focus {
    outline: none;
    border-color: var(--primary-blue);
    box-shadow: 0 0 0 3px rgba(0, 51, 102, 0.1);
}

/* Jobs Grid */
.jobs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-4);
}

/* Job Card */
.job-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--space-4);
    border: 1px solid var(--border-gray);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    cursor: pointer;
}

.job-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--primary-blue) 0%, var(--primary-green) 100%);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.job-card:hover::before {
    transform: scaleX(1);
}

.job-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 32px rgba(0, 51, 102, 0.15);
    border-color: var(--primary-blue);
}

.job-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-3);
    gap: var(--space-2);
}

.job-category-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    background: linear-gradient(135deg, rgba(0, 51, 102, 0.1) 0%, rgba(0, 51, 102, 0.05) 100%);
    color: var(--primary-blue);
    border-radius: var(--radius-full);
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.job-category-badge i {
    width: 14px;
    height: 14px;
}

.job-price {
    font-size: 20px;
    font-weight: 800;
    color: var(--primary-green);
    white-space: nowrap;
}

.job-price-range {
    font-size: 14px;
    color: var(--text-gray);
    font-weight: 600;
}

.job-card-body {
    margin-bottom: var(--space-3);
}

.job-title {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: var(--space-2);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.job-description {
    font-size: 14px;
    color: var(--text-gray);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-bottom: var(--space-3);
}

.job-meta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
}

.job-meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
    color: var(--text-gray);
}

.job-meta-item i {
    width: 16px;
    height: 16px;
    color: var(--primary-blue);
}

.job-meta-item strong {
    color: var(--text-dark);
    font-weight: 600;
}

.job-card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-3);
    border-top: 1px solid var(--border-gray);
}

.job-posted-time {
    font-size: 12px;
    color: var(--text-gray);
    display: flex;
    align-items: center;
    gap: 4px;
}

.job-posted-time i {
    width: 14px;
    height: 14px;
}

.job-apply-btn {
    padding: 8px 20px;
    background: linear-gradient(135deg, var(--primary-green) 0%, #5ab82a 100%);
    color: white;
    border: none;
    border-radius: var(--radius-full);
    font-size: 14px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(102, 204, 51, 0.25);
}

.job-apply-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 16px rgba(102, 204, 51, 0.35);
}

.job-apply-btn:active {
    transform: scale(0.98);
}

/* Urgent Job Badge */
.job-urgent {
    position: relative;
}

.job-urgent::after {
    content: 'URGENT';
    position: absolute;
    top: 16px;
    right: 16px;
    padding: 4px 10px;
    background: linear-gradient(135deg, var(--warning-red) 0%, #b71c1c 100%);
    color: white;
    font-size: 10px;
    font-weight: 800;
    letter-spacing: 0.5px;
    border-radius: var(--radius-sm);
    box-shadow: 0 2px 8px rgba(211, 47, 47, 0.3);
}

/* Featured Job Card */
.job-card.featured {
    background: linear-gradient(135deg, rgba(0, 51, 102, 0.03) 0%, rgba(102, 204, 51, 0.03) 100%);
    border-color: var(--primary-green);
    border-width: 2px;
}

.job-card.featured::before {
    background: linear-gradient(90deg, var(--primary-green) 0%, var(--primary-blue) 100%);
    transform: scaleX(1);
}

/* Empty State */
.jobs-empty-state {
    text-align: center;
    padding: var(--space-10) var(--space-4);
}

.jobs-empty-state i {
    width: 64px;
    height: 64px;
    color: var(--border-gray);
    margin-bottom: var(--space-3);
}

.jobs-empty-state h3 {
    font-size: 24px;
    color: var(--text-gray);
    margin-bottom: var(--space-2);
}

.jobs-empty-state p {
    font-size: 16px;
    color: var(--text-gray);
    margin-bottom: var(--space-4);
}

/* Text Center Utility */
.text-center {
    text-align: center;
}

/* Responsive Design */
@media (max-width: 768px) {
    .section-posted-jobs .section-header {
        flex-direction: column;
    }

    .section-posted-jobs .section-header h2 {
        font-size: 28px;
    }

    .jobs-filters {
        flex-direction: column;
        align-items: stretch;
    }

    .filter-group {
        width: 100%;
    }

    .filter-btn {
        flex: 1;
        justify-content: center;
    }

    .location-filter {
        width: 100%;
    }

    .jobs-grid {
        grid-template-columns: 1fr;
    }

    .job-card-header {
        flex-direction: column;
    }

    .job-price {
        align-self: flex-start;
    }
}

