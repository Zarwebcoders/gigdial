    height: 100%;
}

.chat-list-sidebar {
    width: 320px;
    background: white;
    border-right: 1px solid var(--border-gray);
    display: flex;
    flex-direction: column;
}

.chat-top-bar {
    display: none;
    /* Desktop hidden */
    padding: 12px;
    border-bottom: 1px solid var(--border-gray);
    align-items: center;
}

.chat-list {
    flex: 1;
    overflow-y: auto;
}

.chat-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px;
    cursor: pointer;
    border-bottom: 1px solid #f9fafb;
    transition: background 0.2s;
}

.chat-item:hover,
.chat-item.active {
    background: #f0f9ff;
}

.chat-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
}

.chat-info {
    flex: 1;
    overflow: hidden;
}

.chat-name {
    font-weight: 600;
    margin-bottom: 4px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-preview {
    font-size: 13px;
    color: var(--text-gray);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.chat-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    background: white;
}

.chat-header {
    padding: 16px 24px;
    border-bottom: 1px solid var(--border-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
}

.chat-actions {
    display: flex;
    gap: 12px;
}

.messages-area {
    flex: 1;
    padding: 24px;
    overflow-y: auto;
    background: #f8fafc;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.message {
    max-width: 70%;
    padding: 12px 16px;
    border-radius: 12px;
    font-size: 14px;
    line-height: 1.5;
    position: relative;
}

.message.received {
    background: white;
    border: 1px solid var(--border-gray);
    border-bottom-left-radius: 4px;
    align-self: flex-start;
}

.message.sent {
    background: var(--primary-blue);
    color: white;
    border-bottom-right-radius: 4px;
    align-self: flex-end;
}

.message-img {
    max-width: 200px;
    border-radius: 8px;
    margin-bottom: 4px;
}

.input-area {
    padding: 16px 24px;
    border-top: 1px solid var(--border-gray);
    background: white;
    display: flex;
    gap: 12px;
    align-items: center;
    position: relative;
}

.media-picker {
    position: absolute;
    background: #f8fafc;
}

.toggle-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-bottom: 40px;
}

.toggle-bg {
    width: 200px;
    height: 48px;
    background: #e2e8f0;
    border-radius: 24px;
    position: relative;
    cursor: pointer;
    display: flex;
    padding: 4px;
}

.toggle-slider {
    position: absolute;
    left: 4px;
    top: 4px;
    width: 96px;
    height: 40px;
    background: white;
    border-radius: 20px;
    transition: transform 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
    box-shadow: var(--shadow-sm);
}

.toggle-option {
    flex: 1;
    z-index: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 14px;
    color: var(--text-gray);
    transition: color 0.3s;
}

.toggle-option.active {
    color: var(--text-dark);
}

.plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px 60px;
}

.plan-card {
    background: white;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 32px;
    position: relative;
    transition: all 0.3s;
}

.plan-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
}

.plan-card.popular {
    border: 2px solid var(--primary-blue);
    transform: scale(1.05);
    z-index: 1;
}

.plan-card.popular:hover {
    transform: scale(1.05) translateY(-8px);
}

.popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--primary-blue);
    color: white;
    padding: 4px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.plan-name {
    font-size: 20px;
    font-weight: 700;
    margin-bottom: 16px;
    color: var(--text-dark);
}

.plan-price {
    font-size: 48px;
    font-weight: 800;
    color: var(--text-dark);
    margin-bottom: 24px;
}

.plan-period {
    font-size: 16px;
    font-weight: 500;
    color: var(--text-gray);
}

.feature-list {
    margin-bottom: 32px;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 14px;
    color: var(--text-gray);
}

.check-icon {
    width: 20px;
    height: 20px;
    color: var(--success-green);
    flex-shrink: 0;
}

/* Error & Maintenance Pages */
.error-page-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 20px;
    background: #f8fafc;
}

.error-code {
    font-size: 120px;
    font-weight: 900;
    line-height: 1;
    color: var(--primary-blue);
    opacity: 0.1;
    margin-bottom: -40px;
}

.error-illustration {
    margin-bottom: 32px;
    color: var(--primary-blue);
}

.error-title {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 16px;
    color: var(--text-dark);
}

.error-desc {
    font-size: 16px;
    color: var(--text-gray);
    margin-bottom: 32px;
    max-width: 480px;
}

.maint-container {
    max-width: 500px;
    background: white;
    border-radius: 24px;
    padding: 48px;
    box-shadow: var(--shadow-lg);
    text-align: center;
    margin: 60px auto;
}

.maint-icon {
    width: 80px;
    height: 80px;
    background: #eff6ff;
    color: var(--primary-blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
}

.maint-title {
    font-size: 24px;
    font-weight: 800;
    margin-bottom: 16px;
    color: var(--text-dark);
}

.maint-desc {
    color: var(--text-gray);
    line-height: 1.6;
    margin-bottom: 32px;
}

.status-box {
    display: flex;
    background: #f8fafc;
    border-radius: var(--radius-lg);
    padding: 16px;
    border: 1px solid var(--border-gray);
}

.status-label {
    font-size: 12px;
    color: var(--text-gray);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
}

.status-value {
    font-weight: 700;
    color: var(--text-dark);
}


.picker-option {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 13px;
}

.picker-option:hover {
    background: #f8fafc;
}

.call-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.video-grid {
    position: relative;
    width: 100%;
    max-width: 1000px;
    height: 80vh;
}

.remote-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 16px;
}

.local-video {
    position: absolute;
    bottom: 24px;
    right: 24px;
    width: 180px;
    height: 240px;
    object-fit: cover;
    border-radius: 12px;
    border: 2px solid white;
}

.call-controls {
    display: flex;
    gap: 24px;
    margin-top: 24px;
}

.control-btn {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: #334155;
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 24px;
}

.control-btn.end-call {
    background: #DC2626;
}

.voice-call-ui {
    text-align: center;
    color: white;
}

.voice-avatar {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.2);
    margin-bottom: 24px;
}

/* Dispute Resolution */
.dispute-layout {
    display: flex;
    min-height: calc(100vh - 64px);
}

.dispute-sidebar {
    width: 300px;
    background: white;
    border-right: 1px solid var(--border-gray);
    height: 100%;
    /* In flex context, this might need fix height or overflow */
}

.dispute-main {
    flex: 1;
    padding: 32px;
    background: #f8fafc;
}

.dispute-list {
    overflow-y: auto;
    height: calc(100vh - 120px);
}

.dispute-item {
    padding: 16px;
    border-bottom: 1px solid var(--border-gray);
    cursor: pointer;
}

.dispute-item.active {
    background: #eff6ff;
    border-left: 3px solid var(--primary-blue);
}

.dispute-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    margin-bottom: 24px;
}

.timeline-container {
    background: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
    margin-bottom: 24px;
}

.timeline-item {
    display: flex;
    gap: 16px;
    padding-bottom: 24px;
    position: relative;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 20px;
    top: 40px;
    bottom: 0;
    width: 2px;
    background: #e2e8f0;
}

.timeline-item:last-child::before {
    display: none;
}

.timeline-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #f1f5f9;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #64748b;
    z-index: 1;
}

.timeline-content {
    flex: 1;
}

.timeline-meta {
    font-size: 13px;
    color: var(--text-gray);
    margin-bottom: 8px;
    display: flex;
    justify-content: space-between;
    font-weight: 500;
}

.resolution-panel {
    background: white;
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border-gray);
}

.admin-actions {
    display: flex;
    gap: 12px;
}

.btn-resolve {
    flex: 1;
    padding: 12px;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    font-size: 13px;
}

.btn-resolve.btn-refund {
    background: #fee2e2;
    color: #991b1b;
}

.btn-resolve.btn-split {
    background: #ffedd5;
    color: #c2410c;
}

.btn-resolve.btn-release {
    background: #dcfce7;
    color: #166534;
}

@media (max-width: 768px) {
    .chat-layout {
        flex-direction: column;
    }

    .chat-list-sidebar {
        width: 100%;
        display: none;
    }

    .chat-list-sidebar.active {
        display: flex;
        position: absolute;
        top: 110px;
        z-index: 100;
        height: calc(100vh - 110px);
    }

    .chat-top-bar {
        display: flex;
    }

    .dispute-layout {
        flex-direction: column;
    }

    .dispute-sidebar {
        width: 100%;
        height: auto;
    }
}


.request-type.selected .icon-box {
    background: white;
    border-color: var(--primary-blue);
    color: var(--primary-blue);
}

/* =========================================
   Worker Agreement Styles
   ========================================= */
.contract-container {
    max-width: 800px;
    margin: 40px auto;
}

.contract-paper {
    background: white;
    padding: 48px;
    border: 1px solid var(--border-gray);
    box-shadow: var(--shadow-md);
    margin-bottom: 24px;
}

.contract-title {
    font-size: 24px;
    font-weight: 800;
    text-align: center;
    margin-bottom: 32px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: 2px solid var(--text-dark);
    padding-bottom: 16px;
}

.contract-section {
    margin-bottom: 24px;
}

.contract-section h3 {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-dark);
}

.contract-section p {
    font-size: 14px;
    line-height: 1.6;
    color: var(--text-gray);
    margin: 0;
    text-align: justify;
}

.signature-box {
    background: white;
    border: 1px solid var(--border-gray);
    border-radius: var(--radius-lg);
    padding: 32px;
